{
  "manifest_version": 2,
  "name": "Disco",
  "homepage_url": "http://localhost:8080/",
  "description": "Disco test extension",
  "default_locale": "en",
  "permissions": ["tabs", "activeTab", "<all_urls>", "*://*/*"],
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Disko",
    "default_icon": {
      "16": "icons/16.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    }
  }
}
